{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <body>
        {#####################################################################################################################}
        <main>
            {# Your content here #}
            <!-- Page Title -->
            <div class="pagetitle">
                <h1>Comments Tables</h1>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="index.html">Back</a>
                        </li>
                        <li class="breadcrumb-item">Tables</li>
                        <li class="breadcrumb-item active">Posts</li>
                    </ol>
                </nav>
            </div>
            <!-- End Page Title -->

            {#######################################################################################################################}
            <section class="section">
                <div class="container-fluid pt-4 px-4">
                    <div class="bg-light text-center rounded p-4">
                        <div class="d-flex align-items-center justify-content-between mb-4">
                            <h6 class="mb-0">Posts</h6>
                            <form class="search-container">
                                <input class="form-control border-0" type="search" placeholder="Search" id="myInput">
                            </form>
                        </div>
                        <div class="table-responsive">
                            <table id="mytable" class="table text-start align-middle table-striped table-bordered table-hover mb-0">
                                <thead>
                                    {% if comments|length == 0 %}
                                        <p>No comments yet.</p>
                                    {% else %}
                                        <tr class="text-dark">
                                            <th>ID Post</th>
                                            <th>Comment Id </th>
                                            <th>User  </th>
                                            <th>Comment</th>
                                            <th>Reactions</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for comment in comments %}
                                            <tr>
                                                <td>{{  comment.IDPost.id}}</td>
                                                <td>{{ comment.id }}</td>
                                                <td>{{comment.username }}</td>
                                                <td>{{comment.contentcomment }}</td>
                                                <td>{{comment.upvotes  }}</td>
                                                <td> 
                                                    <div class="col-auto">
                                                        <form method="POST" action="{{ path('app_comment_del', {'id': comment.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                                            <button class="btn btn-danger">
                                                                <i class="bi bi-trash3-fill"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </body>
{% endblock %}
