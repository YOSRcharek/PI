<div class="container text-center mt-8">
  <div class="row">
    <div class="d-flex flex-column">
      
     
      {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

      <div class="row mt-3">
        <div class="col-md-2 mt-3">{{ form_label(form.title, "Post Title:", {'label_attr': {'class': 'col-form-label'}}) }}</div>
        <div class="col-md-8">{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}</div>
      </div>

      <div class="row mt-3">
        <div class="col-md-2 mt-3">{{ form_label(form.content, "Post Content:", {'label_attr': {'class': 'col-form-label'}}) }}</div>
        <div class="col-md-8">{{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}</div>
      </div>

      <div class="row mt-3">
        <div class="col-md-2 mt-3">{{ form_label(form.imageFile, "Image:", {'label_attr': {'class': 'col-form-label'}}) }}</div>
        <div class="col-md-8">{{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}</div>
      </div>

      <div class="row mt-3">
        <div class="col-md-2 mt-3">{{ form_label(form.videoFile, "Video:", {'label_attr': {'class': 'col-form-label'}}) }}</div>
        <div class="col-md-8">{{ form_widget(form.videoFile, {'attr': {'class': 'form-control'}}) }}</div>
      </div>

      <div class="row mt-3">
        <div class="col-md-2 mt-3">{{ form_label(form.quote, "Quote:", {'label_attr': {'class': 'col-form-label'}}) }}</div>
        <div class="col-md-8">
          {{ form_widget(form.quote, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(form.quote) }}
        </div>
      </div>

      {{ form_end(form) }}
    </div>
  </div>
</div>
