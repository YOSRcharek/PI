          <div class="col-lg-8 entries">
            {% for post in posts %}
            <article class="entry">
              
              <div class="entry-img">
              {% if post.image %}
              <img src="{{ vich_uploader_asset(post, 'imageFile') }}" alt="Post Image">
              {% endif %}
