              </div>

              <h2 class="entry-title">
                <a href="{{ path('app_post_show', {'id': post.id}) }}">{{post.title}}</a>
                {% for i in 1..post.rating %}
    <i class="bi bi-star-fill" style="color: #ffe234;"></i>
       
    {% endfor %}
    {% for i in 1..(5-post.rating) %}

    <i class="bi bi-star"></i>
    {% endfor %}
              </h2>

              <div class="entry-meta">
