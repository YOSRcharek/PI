{% extends 'base.html.twig' %}

{% block title %}Liste des Dons{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

<div class="text-center">
    <br>
    <br>
    <h1>Liste des Dons</h1>
    <br>
    <br>
    <div class="container"> <!-- Add a container here -->
        <!-- Add the filter form -->
       <form id="filterForm" class="row g-3">
          <div class="col-auto">
            <label for="montantFilter" class="visually-hidden">Montant</label>
            <input type="text" class="form-control" id="montantFilter" name="montant" placeholder="Enter Montant">
          </div>
          <div class="col-auto">
             <button type="submit" class="btn btn-primary mb-3">Filter</button>
          </div>
        </form>

        <br>
        <div id="filteredResults" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <!-- Display the filtered results here -->
            {% for don in pagination %}
                <div class="col">
                    <div class="card custom-card">
                        <div class="card-body">
                            <h5 class="card-title">Association: {{ don.association is not null ? don.association.nom : '' }}</h5>
                            <p class="card-text">Montant: {{ don.montant }}</p>
                            <p class="card-text">Date de mise: {{ don.dateMisDon|date('d-m-Y') }}</p>
                            <p class="card-text">Type: {{ don.type is not null ? don.type.nom : '' }}</p>
                            <p class="card-text"></p>
                            <div class="btn-group" role="group">
                                <a href="{{ path('dons_modifier', {'id': don.id}) }}" class="custom-btn btn mt-3">
                                    <i class="fas fa-edit"></i> <!-- Icône Modifier -->
                                </a>
                                <a href="{{ path('dons_delete', {'id': don.id}) }}" class="custom-btn btn mt-3" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce don ?')">
                                    <i class="fas fa-trash-alt"></i> <!-- Icône Supprimer -->
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <br>
    <a href="{{ path('dons_add') }}" class="custom-btn btn mt-3">Ajouter un don</a>
    <br>
    <br>
    <div class="d-flex justify-content-center">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                 {% if pagination.previous is defined %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_dons', {'page': pagination.previous}) }}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <span class="page-link" aria-hidden="true">&laquo;</span>
                    </li>
                {% endif %}

                {% for page in 1..pagination.pageCount %}
                    {% if page == pagination.currentPageNumber %}
                        <li class="page-item active"><span class="page-link">{{ page }}</span></li>
                    {% else %}
                        <li class="page-item"><a class="page-link" href="{{ path('app_dons', {'page': page}) }}">{{ page }}</a></li>
                    {% endif %}
                {% endfor %}

                {% if pagination.next is defined %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_dons', {'page': pagination.next}) }}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <span class="page-link" aria-hidden="true">&raquo;</span>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>
    <br>
    <br>
</div>

<style>
    .custom-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 15px;
    }

    .custom-card:hover {
        transform: scale(1.05); /* effet de zoom */
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2); /* ombre légère */
        background-color: #f8f9fa; /* couleur de fond légèrement plus claire */
    }
</style>

<script>
    $(document).ready(function () {
        $('#filterForm').submit(function (e) {
            e.preventDefault();
            var montant = $('#montantFilter').val();

            // Make AJAX request to filter by montant
            $.ajax({
                url: "{{ path('filter_dons_by_montant') }}",
                type: "GET",
                data: { montant: montant },
                success: function (response) {
                    var dons = response.dons;
                    var filteredResults = '';

                    // Iterate through filtered results and append them to the DOM
                    dons.forEach(function (don) {
                        filteredResults += '<div class="col">' +
                            '<div class="card custom-card">' +
                            '<div class="card-body">' +
                            '<h5 class="card-title">Association: ' + (don.association != null ? don.association.nom : '') + '</h5>' +
                            '<p class="card-text">Montant: ' + don.montant + '</p>' +
                            '<p class="card-text">Date de mise: ' + don.dateMisDon + '</p>' +
                            '<p class="card-text">Type: ' + (don.type != null ? don.type.nom : '') + '</p>' +
                            '<p class="card-text"></p>' +
                            '<div class="btn-group" role="group">' +
                            '<a href="" class="custom-btn btn mt-3">' +
                            '<i class="fas fa-edit"></i> <!-- Icône Modifier -->' +
                            '</a>' +
                            '<a href="" class="custom-btn btn mt-3" onclick="return confirm(' + "'Êtes-vous sûr de vouloir supprimer ce don ?'" + ')">' +
                            '<i class="fas fa-trash-alt"></i> <!-- Icône Supprimer -->' +
                            '</a>' +
                            '</div>' +
                            '</div>' +
                            '</div>' +
                            '</div>';
                    });

                    // Update the filteredResults container with the filtered results
                    $('#filteredResults').html(filteredResults);
                },
                error: function () {
                    console.error("An error occurred while processing the AJAX request.");
                }
            });
        });
    });
</script>

{% endblock %}
