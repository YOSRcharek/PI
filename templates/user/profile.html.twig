{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Edit User</title>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .profile {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .profile-header {
            padding: 20px;
            border-bottom: 1px solid #eaeaea;
        }

        .profile-header-content {
            display: flex;
            align-items: center;
        }

        .profile-header-img img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
        }

        .profile-header-info {
            margin-left: 20px;
        }

        .profile-header-info h4 {
            margin: 0;
            font-size: 24px;
            color: #333;
        }

        .profile-header-info p {
            margin: 5px 0;
            font-size: 16px;
            color: #666;
        }

        .timeline-icon a {
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="profile">
        <div class="profile-header">
            <div class="profile-header-content">
                <div class="profile-header-img">
                    {% if image is not null %}
                        <img src="{{ image }}" alt="Profile Image">
                    {% else %}
                        <img src="https://bootdey.com/img/Content/avatar/avatar3.png">
                    {% endif %}
                </div>
                <div class="profile-header-info">
                    <h4 class="m-t-10 m-b-5">{{ email }}</h4>
                    <p>Profile: Volunteer</p> <!-- Added "Volunteer" text -->
                    {% if bio is not null %}
                        <p>Bio: {{ bio }}</p> <!-- Display user bio if available -->
                    {% endif %}
                    <div >
                        <a href="{{ path('update_profile') }}" class="custom-btn btn mt-3">Edit Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include Our Mission block -->
<div class="container">
    <div class="card">
        <div class="custom-text-box mb-lg-0">
            <h5 class="mb-3">Our Mission</h5>

            <p>our mission is to serve the community</p>

            <ul class="custom-list mt-2">
                <li class="custom-list-item d-flex">
                    <i class="bi-check custom-text-box-icon me-2"></i>
                    Charity 
                </li>

                <li class="custom-list-item d-flex">
                    <i class="bi-check custom-text-box-icon me-2"></i>
                    Services
                </li>
            </ul>    
        </div>
    </div>
</div>

<!-- Include Project block -->
<div class="container">
    <div class="card">
        <div class="card-body">
            <div>
                <h5 class="mb-3">Project </h5>
                <div class="table-responsive">
                    <div class="container px-8 mx-auto grid">
                        <canvas id="myChart"></canvas>      
                    </div>
                </div>
            </div>
        </div><!-- end card body -->
    </div><!-- end card -->
</div>

<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
{% endblock %}
