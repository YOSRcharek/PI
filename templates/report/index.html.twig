{% extends 'base.html.twig' %}

{% block title %}Report index{% endblock %}

{% block body %}
    <h1>Report index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reporter</th>
                <th>Reason</th>
                <th>Details</th>
                <th>HidePost</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for report in reports %}
            <tr>
                <td>{{ report.id }}</td>
                <td>{{ report.username.getUsername() }}</td>
                <td>{{ report.reason }}</td>
                <td>{{ report.details }}</td>
                <td>{{ report.hidePost ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_report_show', {'id': report.id}) }}">show</a>
                    <a href="{{ path('app_report_edit', {'id': report.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_report_new') }}">Create new</a> #}
{% endblock %}
