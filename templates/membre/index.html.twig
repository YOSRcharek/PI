
    <style>
     
      .openBtn {
        display: flex;
        justify-content: left;
      }
      .openButton {
        border: none;
        border-radius: 5px;
        background-color: #1c87c9;
        color: white;
        padding: 14px 20px;
        cursor: pointer;
        position: fixed;
      }
      .addMembrePopUP {
        position: relative;
        text-align: center;
        width: 100%;
      }

        .formPopup {
            display: none;
            position: fixed;
            left: 50%; /* Position horizontale au centre */
            top: 50%; /* Position verticale au centre */
             z-index: 9;
             transform: translate(-30%, -40%); 


          }
          .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* Gris semi-transparent */
            z-index: 8; /* Doit être inférieur au z-index du popup */
          }
          
    
      .formContainer {
        max-width: 300px;
        padding: 20px;
        background-color: #fff;
      }
      .formContainer input[type=text],
      .formContainer input[type=password] {
        width: 100%;
        padding: 15px;
        margin: 5px 0 20px 0;
        border: none;
        background: #eee;
      }
      .formContainer input[type=text]:focus,
      .formContainer input[type=password]:focus {
        background-color: #ddd;
        outline: none;
      }
      .formContainer .btn {
        padding: 12px 20px;
        border: none;
        background-color: #8ebf42;
        color: #fff;
        cursor: pointer;
        width: 100%;
        margin-bottom: 15px;
        opacity: 0.8;
      }
      .formContainer .cancel {
        background-color: #cc0000;
      }
   
    </style>
  <body>
    <div class="overlay" id="overlay"></div>
  
  
    <script>
        function openForm() {
            document.getElementById("popupForm").style.display = "block";
            document.getElementById("overlay").style.display = "block"; // Afficher l'overlay
          }
          function closeForm() {
            document.getElementById("popupForm").style.display = "none";
            document.getElementById("overlay").style.display = "none"; // Masquer l'overlay
          }
    
    </script>
  
    <div class="tab-pane active show" id="tasks-tab" role="tabpanel">
        <div class="row mb-3">
            <div class="col">
                <h5 class="mb-0">Team</h5>
            </div>
            <div class="col text-end">
                <button class="custom-btn" onclick="openForm()">+ New member</button>
               
                <div class="addMembrePopUP">
                    <div class="formPopup" id="popupForm">
                        <div class="col-lg-6 col-12">
                            <form class="custom-form volunteer-form mb-5 mb-lg-0" action="{{ path('app_profil', {'id': association.id}) }}
                            " method="post" role="form">
                            <button type="button" class="btn-close" onclick="closeForm()"></button>

                                <h2 class="mb-4">New member</h2>
                                <div class="row">
                                  {{ form_start(form, {'attr': {'class': 'custom-form volunteer-form mb-5 mb-lg-0'}}) }}
    
                                    <div class="col-lg-6 col-12">
                                        {{ form_row(form.nomMembre, {'label': 'First Name:', 'attr': {'class': 'form-control', 'placeholder': 'First Name', 'required': 'required'}}) }}
                                        {% if form_errors(form.nomMembre) %}
                                            <div class="text-danger">
                                                {{ form_errors(form.nomMembre) }}
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="col-lg-6 col-12">
                                        {{ form_row(form.prenomMembre, {'label': 'Last Name:', 'attr': {'class': 'form-control', 'placeholder': 'Last Name', 'required': 'required'}}) }}
                                        {% if form_errors(form.prenomMembre) %}
                                            <div class="text-danger">
                                                {{ form_errors(form.prenomMembre) }}
                                            </div>
                                        {% endif %}
                                    </div>
                                        {{ form_row(form.emailMembre, {'label': 'Email:', 'attr': {'class': 'form-control', 'placeholder': 'Nom@gmail.com', 'required': 'required', 'pattern': '[^ @]*@[^ @]*'}}) }}
                                        {% if form_errors(form.emailMembre) %}
                                            <div class="text-danger">
                                                {{ form_errors(form.emailMembre) }}
                                            </div>
                                        {% endif %}
                                   
                                    <div class="col-lg-6 col-12">
                                        {{ form_row(form.telephone, {'label': 'Telephone:', 'attr': {'class': 'form-control', 'placeholder': '+216', 'required': 'required'}}) }}
                                        {% if form_errors(form.telephone) %}
                                            <div class="text-danger">
                                                {{ form_errors(form.telephone) }}
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="col-lg-6 col-12">
                    
                                        {{ form_row(form.fonction, {'label': 'Function:', 'attr': {'class': 'form-control', 'required': 'required'}}) }}
                                        {% if form_errors(form.fonction) %}
                                            <div class="text-danger">
                                                {{ form_errors(form.fonction) }}
                                            </div>
                                        {% endif %}
                                    
                                        </div>
                                </div>
                                <button type="submit" class="form-control">Add member</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12">  
                {% for team in membres %}
                <div class="task-list-box" id="design-task">
                    <div id="task-item-2"> 
                        <div class="card task-box rounded-3">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-xl-6 col-sm-5">
                                        <div class="checklist form-check font-size-15">
                                            <label class="form-check-label ms-1 task-title" for="customCheck2">{{ team.nomMembre }} {{ team.prenomMembre }}</label>
                                        </div>
                                        
                                    </div><!-- end col -->
                                    <div class="col-xl-6 col-sm-6">
                                        <div class="row align-items-center">
                                            <div class="col-xl-5 col-md-6 col-sm-5">
                                                
                                                {{team.fonction}}
                                                    
                                            </div><!-- end col -->
                                            <div class="col-xl-7 col-md-6 col-sm-7">
                                                <div class="d-flex flex-wrap gap-3 mt-3 mt-xl-0 justify-content-md-end">
                                                    <div>
                                                        <a href="{{ path('app_details_membre', {'id': team.id}) }}" class="badge rounded-pill badge-soft-warning font-size-11 task-status">Detail</a>
                                                    </div>
                                                    <div>
                                                        <a href="{{ path('app_edit_membre', {'id': team.id}) }}" class="badge rounded-pill badge-soft-warning font-size-11 task-status">Edit</a>
                                                    </div>
                                                    <div>
                                                        <a data-bs-toggle="modal" type='button' data-bs-target="#deleteMembreModel{{ team.id }}" aria-label="Delete" class="badge rounded-pill badge-soft-warning font-size-11 task-status">Delete</a>
                                                         
                                                    </div>
                                                    <div class="modal fade" id="deleteMembreModel{{ team.id }}" tabindex="-1" aria-labelledby="deleteMembreModelLabel" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="deleteMembreModelLabel">Confirmation de suppression</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                  Are you sure do you want to delete this member ?
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="custom-btn" data-bs-dismiss="modal">Annuler</button>
                                                                    <a href="{{ path('app_delete_membre', {'id': team.id}) }}" class="custom-btn">Supprimer</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- end col -->
                                        </div><!-- end row -->
                                    </div><!-- end col -->
                                </div><!-- end row -->
                            </div><!-- end cardbody -->
                        </div><!-- end card -->
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    
